FROM python:3.12-slim

# ---- Environment ----
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# ---- Workdir ----
WORKDIR /app

# ---- System dependencies ----
RUN apt-get update && apt-get install -y \
    gcc \
    libpq-dev \
    libffi-dev \
    libssl-dev \
    libjpeg-dev \
    zlib1g-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ---- Create non-root user ----
# UID matches host user (1003) to avoid volume permission issues
RUN useradd -m -u 1003 celeryuser

# ---- Python dependencies (cached layer) ----
COPY requirements.txt .
RUN pip install --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# ---- App code (owned correctly at copy time) ----
COPY --chown=celeryuser:celeryuser . .

# ---- Switch to non-root user ----
USER celeryuser

# ---- Default command (override in docker-compose) ----
CMD ["gunicorn", "CoreApi.wsgi:application", "--bind", "0.0.0.0:8000"]
